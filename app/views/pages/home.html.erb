
  <div class="container">
  <div class="jumbotron">
    <h2 align="center">List: <%= @list_name %></h2> 
    
  </div>
  
</div>
  
  
  <h2>Add Subscriber</h2>
  <hr/>
  <%= form_tag("/pages/add_user", :method => "post", class:"form-horizontal") do %>
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Email: </label>
    <div class="col-sm-4">
    <%= text_field_tag :email, params[:email], class: "form-control" %>
  </div>
  </div>
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name: </label>
    <div class="col-sm-4">
  <%= text_field_tag :name, params[:name], class: "form-control" %>
</div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
  <%= submit_tag "Add", name: nil, class: "btn btn-primary" %>
</div>
  </div>
<% end %>

<h2>Remove Subscriber</h2>
  <hr/>
  <%= form_tag("/pages/remove_user", :method => "post", class:"form-horizontal") do %>
  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Email: </label>
  
    <div class="col-sm-4">
    <%= text_field_tag :email_remove, params[:email_remove], class: "form-control" %>
</div>
  </div>
    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
  <%= submit_tag "Remove", name: nil, class: "btn btn-danger" %>
  </div>
  </div>
<% end %>
 